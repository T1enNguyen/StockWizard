@{ 
    ViewBag.Title = "Index";
}
  <div class="wrapper">
        <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
          <!-- Brand Logo -->
          <a href="#" class="brand-link">
              <img src="~/Content/dist/img/AdminLTELogo.png"
                   alt="AdminLTE Logo"
                   class="brand-image img-circle elevation-3"
                   style="opacity: .8">
              <span class="brand-text font-weight-light">Nhóm StockWizard</span>
          </a>
          <!-- Sidebar -->
          <div class="sidebar">
              <!-- Sidebar user panel (optional) -->
              <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                  <div class="image">
                      <img src="~/Content/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                  </div>
                  <div class="info">
                      <a  class="d-block">
                          <input type="file" id="fileInput" accept=".csv" onchange="handleFileSelect(event)">
                      </a>
                  </div>
              </div>
          </div>
          <!-- /.sidebar -->
      </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- Cột trái: Bảng dữ liệu CSV -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="card-title mb-0">Nội dung CSV</h5>
                                </div>
                                <div class="card-body">
                                    <div id="csvTableContainer" class="table-responsive" style="max-height: 600px; overflow-y: auto;"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Cột phải: Biểu đồ -->
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header bg-success text-white">
                                    <h5 class="card-title mb-0">Biểu đồ Line - Giá Đóng Cửa</h5>
                                </div>
                                <div class="card-body">
                                    <div id="chartContainer1" style="height: 350px; width: 100%;"></div>
                                </div>
                            </div>

                            <br>

                            <div class="card">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="card-title mb-0">Biểu đồ Nến</h5>
                                </div>
                                <div class="card-body">
                                    <div id="chartContainer2" style="height: 350px; width: 100%;"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    
